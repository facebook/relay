{
  "name": "relay-lsp-client",
  "version": "1.0.0",
  "description": "Relay LSP Client for VSCode",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Relay",
      "properties": {
        "relay.enabled": {
          "scope": "window",
          "type": "boolean",
          "default": true,
          "description": "Is relay enabled"
        },
        "relay.outputLevel": {
          "scope": "window",
          "type": "string",
          "default": "quiet-with-errors",
          "description": "Can be one of the following. `quiet`, `quiet-with-errors`, `verbose`, `debug`"
        },
        "relay.pathToRelay": {
          "scope": "window",
          "type": "string",
          "description": "Absolute path to relay binary. If not provided, the extension will look in the nearest node_modules directory"
        }
      }
    }
  },
  "scripts": {
    "watch": "tsc -w"
  },
  "engines": {
    "vscode": "^1.65.0"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.65.0",
    "typescript": "^4.6.3"
  }
}
