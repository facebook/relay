==================================== INPUT ====================================
query NodeQuery($id: ID!, $orderBy: String) {
  node(id: $id) {
    id
    ... on Story {
      comments(first: 10, orderby: $orderBy)
        @connection(key: "NodeQuery_comments", filters: []) {
        edges {
          node {
            actor {
              name
            }
          }
        }
      }
    }
  }
}
