query kitchenSink_NodeQuery($id: ID!, $cond: Boolean!, $PictureSize: [Int]!) {
  node(id: $id) {
    id
    ... on User @include(if: $cond) {
      name
    }
    ...kitchenSink_UserFragment @include(if: $cond) @arguments(size: $PictureSize)
  }
}

