{
  "fileTypes": ["res", "resi"],
  "injectionSelector": "L:source -string -comment",
  "patterns": [
    {
      "contentName": "meta.embedded.block.graphql",
      "begin": "(%graphql\\()\\s*$",
      "end": "(?<=\\))",
      "patterns": [
        {
          "begin": "^\\s*(`)$",
          "end": "^\\s*(`)",
          "patterns": [{ "include": "source.graphql" }]
        }
      ]
    },
    {
      "contentName": "meta.embedded.block.graphql",
      "begin": "(%graphql\\(`)",
      "end": "(\\`( )?\\))",
      "patterns": [{ "include": "source.graphql" }]
    }
  ],
  "scopeName": "inline.graphql.res"
}
